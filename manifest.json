{
  "name": "lakca-chrome-extension",
  "description": "a group of little features",
  "version": "1.0.0",
  "manifest_version": 2,
  "author": "lakca",
  "permissions": [
    "<all_urls>",
    "activeTab",
    "clipboardWrite",
    "storage"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_title": "Actions",
    "default_popup": "popup.html"
  },
  "content_scripts": [{
    "matches": [
      "*://*/*"
    ],
    "js": ["content.js"]
  }]
}